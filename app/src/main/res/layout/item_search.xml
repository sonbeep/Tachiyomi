<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginTop="16dp"
    android:id="@+id/llContainer"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivAvt"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:src="@drawable/truyen"
        android:layout_marginStart="10dp"/>
    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ddddddddddddddddd"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_bold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rycGenre"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:itemCount="4"
            tools:listitem="@layout/item_genre"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <TextView
            android:id="@+id/releaseDate"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sssss"/>
        <TextView
            android:id="@+id/overview"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finding himself in a new era, and approaching retirement, Indy wrestles with fitting into a world that seems to have outgrown him. But as the tentacles of an all-too-familiar evil return in the form of an old rival, Indy must don his hat and pick up his whip once more to make sure an ancient and powerful artifact doesn't fall into the wrong hands."
            android:maxLines="3"
            android:ellipsize="end"/>
    </LinearLayout>

</LinearLayout>